<html>
	<head>
		<title>Beauty Hair Salon</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/styles.css">
	</head>
	<body>
		<nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/"> <i class="fa fa-diamond"></i> Beauty Hair Salon</a>
                </div>			
            </div>
	    </nav>
		<div class="da-background">
			<div class="jumbotron vertical-center">
				<div class="container-fluid">
					<h2>Update {{ client.getName }}</h2>
					<form action="/clients/{{ client.getId }}" method="post">
						<div class="form-group">
							<input id="stylist_id" type="hidden" name="stylist_id" value="{{ client.getId }}">
							<input name="_method" type="hidden" value="patch">
							<label for="name">Enter new Name:</label>
							<input id="name" name="name" type="text" class="form-control">
							<button type="submit" class="btn btn-default">Update <i class="fa fa-pencil-square-o"></i></button>
						</div>
					</form>
					<form action="/clients/{{ client.getId }}" method="post">
						<input name="_method" type="hidden" value="delete">
						<button type="submit" class="btn btn-default">Delete <i class="fa fa-trash-o"></i></button>
					</form>
					<form action="/stylists/{{ client.getStylistId }}">
						<button type="submit" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>